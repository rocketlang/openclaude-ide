# OpenClaude IDE - Environment Configuration Example
# Copy this file to .env and fill in your values

# ============================================================================
# APPLICATION
# ============================================================================
NODE_ENV=production
APP_NAME=OpenClaude IDE
APP_VERSION=1.0.0-beta

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
PORT=5200
HOST=0.0.0.0
BACKEND_PORT=5201

# ============================================================================
# GRAPHQL BACKEND
# ============================================================================
OPENCLAUDE_BACKEND_URL=http://localhost:4000/graphql
OPENCLAUDE_BACKEND_WS=ws://localhost:4000/graphql
OPENCLAUDE_API_TOKEN=
OPENCLAUDE_TIMEOUT=30000

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=postgresql://ankr:YOUR_PASSWORD@localhost:5432/openclaude?schema=public

# ============================================================================
# AI SERVICES
# ============================================================================
AI_ENABLED=true
AI_PROXY_URL=http://localhost:4444
ANTHROPIC_API_KEY=sk-ant-YOUR_API_KEY_HERE
CLAUDE_MODEL=claude-opus-4

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=info
DEBUG=false
LOG_DIR=/var/log/openclaude
LOG_FILE=/var/log/openclaude/ide.log

# ============================================================================
# SECURITY
# ============================================================================
AUTH_ENABLED=false
SESSION_SECRET=GENERATE_RANDOM_STRING_IN_PRODUCTION
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:5200

# ============================================================================
# PERFORMANCE
# ============================================================================
NODE_MAX_OLD_SPACE_SIZE=4096
WORKER_THREADS=4

# ============================================================================
# MONITORING
# ============================================================================
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
METRICS_PORT=9090

# ============================================================================
# DEVELOPMENT
# ============================================================================
USE_MOCK_BACKEND=false
SOURCE_MAPS=true

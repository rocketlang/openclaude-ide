# OpenClaude IDE - Environment Configuration
# Generated: 2026-01-24
# Project: AI-Powered IDE for Indian Developers

# ============================================================================
# APPLICATION
# ============================================================================
NODE_ENV=production
APP_NAME=OpenClaude IDE
APP_VERSION=1.0.0-beta

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
# Frontend IDE port
PORT=5200
HOST=0.0.0.0

# Backend port (Theia backend)
BACKEND_PORT=5201

# ============================================================================
# GRAPHQL BACKEND
# ============================================================================
# GraphQL API endpoint
OPENCLAUDE_BACKEND_URL=http://localhost:4000/graphql
OPENCLAUDE_BACKEND_WS=ws://localhost:4000/graphql

# API Authentication (optional)
OPENCLAUDE_API_TOKEN=

# Request timeout (milliseconds)
OPENCLAUDE_TIMEOUT=30000

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=postgresql://ankr:indrA@0612@localhost:5432/openclaude?schema=public

# ============================================================================
# AI SERVICES
# ============================================================================
# Enable/disable AI features
AI_ENABLED=true
AI_CODE_REVIEW_ENABLED=true
AI_TEST_GENERATION_ENABLED=true
AI_CODE_COMPLETION_ENABLED=true
AI_DOCUMENTATION_ENABLED=true

# AI Proxy endpoint
AI_PROXY_URL=http://localhost:4444

# Claude AI API (for Theia AI packages)
ANTHROPIC_API_KEY=
CLAUDE_MODEL=claude-opus-4

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=info
DEBUG=false

# Enable debug logging for specific components
DEBUG_OPENCLAUDE=false
DEBUG_GRAPHQL=false
DEBUG_RPC=false

# Log file locations
LOG_DIR=/var/log/openclaude
LOG_FILE=/var/log/openclaude/ide.log

# ============================================================================
# THEIA CONFIGURATION
# ============================================================================
# Workspace directory
THEIA_WORKSPACE=/home/ankr/workspace

# Plugin directory
THEIA_PLUGINS_DIR=/root/openclaude-ide/plugins

# Enable/disable features
THEIA_ENABLE_METRICS=true
THEIA_ENABLE_COLLABORATION=true

# ============================================================================
# SECURITY
# ============================================================================
# Enable authentication
AUTH_ENABLED=false

# Session secret (generate in production)
SESSION_SECRET=change-this-in-production-use-random-string

# CORS settings
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:5200

# ============================================================================
# PERFORMANCE
# ============================================================================
# Max memory for Node.js (MB)
NODE_MAX_OLD_SPACE_SIZE=4096

# Worker threads
WORKER_THREADS=4

# ============================================================================
# MONITORING
# ============================================================================
# Enable health checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Metrics export
METRICS_ENABLED=true
METRICS_PORT=9090

# ============================================================================
# DEVELOPMENT
# ============================================================================
# Hot reload
HOT_RELOAD=false

# Source maps
SOURCE_MAPS=true

# Mock data
USE_MOCK_BACKEND=true

# ============================================================================
# PATHS
# ============================================================================
# Application paths
APP_DIR=/root/openclaude-ide
EXAMPLES_DIR=/root/openclaude-ide/examples/browser
PACKAGES_DIR=/root/openclaude-ide/packages

# ============================================================================
# INTEGRATIONS
# ============================================================================
# VS Code extension compatibility
VSCODE_EXTENSIONS_DIR=/root/.vscode-server/extensions

# Open VSX Registry
OVSX_REGISTRY_URL=https://open-vsx.org

# ============================================================================
# ANALYTICS (Optional)
# ============================================================================
ANALYTICS_ENABLED=false
ANALYTICS_ID=

# ============================================================================
# FEATURE FLAGS
# ============================================================================
FEATURE_CODE_REVIEW=true
FEATURE_TEST_GENERATION=true
FEATURE_AI_CHAT=true
FEATURE_COLLABORATION=true
FEATURE_MARKETPLACE=true
